
@model InstructorAndListDepartment
@{
    ViewData["Title"] = "Details";
}

<img src="/wwwroot/photos/@Model.instructor.Image">instructor image</img>

<form action="/Instructor/SaveData/@Model.instructor.Id" method="post">
    @*     <input type="hidden" name="id" value="@Model.Id" /> *@
    <input type="hidden" name="Id" value="@Model.instructor.Id"/>
    <input type="hidden" name="Image" value="@Model.instructor.Image"/>
    
    <input type="hidden" name="Course" value="@Model.instructor.Course" />
    <input type="hidden" name="CourseId" value="@Model.instructor.CourseId" />
   <div>
       <label for="Name">Name</label>
        <input type="text" id="Name" name="Name" value="@Model.instructor.Name" class="form form-control" />
   </div>

    <div>
        <label for=" Salary">Salary</label>
        <input type="number" id="Salary" name="Salary" value="@Model.instructor.Salary"  class="form form-control" />
    </div>

    <div>
        <label for="address" >Address</label> 
        <input type="text" id="address"name="address" value="@Model.instructor.address" class="form form-control" />
    </div>
   <div>
       <label for="DepartmentId" >Department</label>
        <select id="DepartmentId" name="DepartmentId" class="form form-control">
        @foreach(var item in Model.departmentList){
            if(Model.instructor.DepartmentId==item.Id){
                <option value="@item.Id" selected>@item.Name</option>
            }
            else{
                <option value="@item.Id" >@item.Name</option>
            }
        }
</select>


   </div>
    <input type="submit" value="Save" class="btn btn-success" />
    

</form>

